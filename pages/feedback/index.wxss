page{
  background-color:#dedede;
}
.fb_main{
  padding:20rpx;
  color:#666;
}
.fb_main .fb_tips{
  display: flex;
  flex-wrap:wrap;
}
text{
  width:30%;
  padding:10rpx;
  text-align: center;
  background-color:#fff;
  margin:20rpx 10rpx;
  border-radius: 20rpx;
  font-size:25rpx;
}
.fb_content{
  background-color:white;
  margin-top: 20rpx;
}
textarea{
  padding:10rpx;
}
.fb_tool{
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 30rpx;
}
.fb_tool button{
  margin:0;
  width:90rpx;
  height:90rpx;
  font-size:40rpx;
  padding:0;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left:20rpx;
}
.from_btn_wrap{
  margin-top: 20rpx;
  display: flex;
  justify-content: flex-end;
}
.from_btn_wrap button{
  width:30%;
  height:70rpx;
  margin:0;
  font-size:30rpx;
}
.up_img_item{
  margin-left:20rpx;
}