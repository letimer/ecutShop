page{
  height:100%;
}
.cates {
  height:100%;
}
.cates_container{
  display:flex;
  height:calc( 100vh - 90rpx );
}
.left_menu{
  flex:2;
}
.left_menu .menu_item{
  height:80rpx;
  display:flex;
  justify-content: center;
  font-size: 30rpx;
  background-color:rgb(230, 246, 248);
}
.left_menu  .active{
  color:var(--themeColor);
  border-left:5rpx solid currentColor;
}
.right_content{
  flex:5;
}
.goods_list{
  display: flex;
  flex-wrap: wrap;
}
.goods_list navigator{
  width:33.33%;
  flex-direction: column;
}
.goods_list navigator image{
  width:50%;
}
.goods_title{
  height:80rpx;
  display:flex;
  justify-content: center;
  align-items: center;
}
.goods_title .delimiter{
  padding:0 10rpx;
}

